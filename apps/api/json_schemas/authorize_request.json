{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "consumer": {
      "type": "object",
      "properties": {
        "user_id": {
          "type": "string"
        },
        "client_id": {
          "type": "string"
        },
        "client_type": {
          "type": "string"
        }
      },
      "required": [
        "user_id",
        "client_id"
      ],
      "additionalProperties": false
    },
    "resource": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        },
        "id": {
          "type": "string",
          "minLength": 1
        },
        "action": {
          "type": "string",
          "enum": [
            "create",
            "read",
            "update",
            "action"
          ]
        }
      },
      "required": [
        "action",
        "type",
        "id"
      ]
    },
    "context": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        },
        "id": {
          "type": "string"
        }
      },
      "required": [
        "type",
        "id"
      ]
    }
  },
  "properties": {
    "consumer": {
      "$ref": "#/definitions/consumer"
    },
    "contexts": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/context"
      }
    },
    "resource": {
      "type": "object",
      "$ref": "#/definitions/resource"
    }
  },
  "required": [
    "consumer",
    "resource"
  ],
  "additionalProperties": false
}
